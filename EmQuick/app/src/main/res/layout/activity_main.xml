<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.karinemellata.emquick.MainActivity">

    <Button
        android:text="I need\nhelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/neepHelp"
        android:elevation="0dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_marginBottom="188dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorLink="@android:color/holo_orange_dark"
        android:textColor="?android:attr/textColorHint"
        android:textSize="26sp"
        android:typeface="monospace"
        tools:textColor="?android:attr/textColorHint"
        android:background="@android:color/holo_blue_dark"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Media"
        android:height="70dp"
        android:width="120dp"
        android:textStyle="normal|bold" />

    <Button
        android:text="Someone needs\nhelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:id="@+id/button2"
        android:elevation="0dp"
        android:layout_alignBottom="@+id/neepHelp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="19sp"
        android:typeface="monospace"
        android:textColorLink="@android:color/holo_orange_dark"
        android:textColor="?android:attr/textColorHint"
        tools:textColor="?android:attr/textColorHint"
        android:background="@android:color/holo_blue_dark"
        tools:textAppearance="@style/TextAppearance.AppCompat.Notification.Media"
        android:height="70dp"
        android:width="120dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="EM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:id="@+id/textView2"
        android:scaleX="5"
        android:scaleY="5"
        android:translationX="-50dp"
        android:translationY="20dp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:text="QU  CK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/textView3"
        android:scaleX="5"
        android:scaleY="5"
        android:translationX="-10dp"
        android:translationY="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_name"
        android:layout_marginTop="118dp"
        android:id="@+id/imageView2"
        android:scaleX="4"
        android:scaleY="4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:translationX="54dp"
        android:translationY="12dp" />

    <TextView
        android:text="Create account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:id="@+id/textView4"
        android:clickable="true" />

</RelativeLayout>
